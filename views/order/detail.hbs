<div class="container mt-5 mb-5 h-75">
    <div class="row justify-content-center">
        <div class="col-10">
            <div class="card text-bg-dark mb-4">
                <img src="{{orders.idEstablishment.photo}}" class="card-img custom-dimension custom-image-filter" />
                <div class="card-img-overlay d-flex justify-content-center align-items-center">
                    <h1 class="card-title">{{orders.idEstablishment.name}}</h1>
                </div>
            </div>
        </div>
        <div class="col-5">
            <h3 class="mb-4">Tu pedido</h3>
            {{#each orders.products}}
                <div class="row">
                    <div class="col-4">
                        <span class="fw-bold">{{this.quantity}}x</span>
                    </div>
                    <div class="col-4">
                        <span class="fst-italic">{{this.product.name}}</span>
                    </div>
                    <div class="col-4 custom-currency text-center">
                        <span>{{this.subtotal}}</span>
                    </div>
                </div>
            {{/each}}
        </div>
        <div class="col-5">
            <h3 class="mb-4">Detalles del envio</h3>
            <div class="row">
                <div class="col-12">
                    <i class="fa-solid fa-flag-checkered fa-fw" data-bs-toggle="tooltip" data-bs-title="Destino">&nbsp</i><span class="fw-bold">{{orders.address}}</span>
                </div>
            </div>
        </div>
        <div class="col-10 bg-light mt-3">
            <h2 class="mb-4">Resumen</h3>
            <div class="row">
                <div class="col-12 d-flex justify-content-between">
                    <p class="fw-bold m-0">Entregas y Tarifas</p>
                    <span class="fw-bold">Sin coste</span>
                </div>
                <div class="col-12 d-flex justify-content-between custom-currency">
                    <p class="fw-bold mt-0">Productos</p>
                    <span class="fw-bold">{{orders.total}}</span>
                </div>
                <div class="col-12 d-flex justify-content-between custom-currency">
                    <h3 class="fw-bold">Total</h3>
                    <span class="fw-bold fs-3">{{orders.total}}</span>
                </div>
            </div>
        </div>
        <div class="col-10 mt-4">
            <a class="btn btn-link ps-0" href="/orders/{{orders.idUser}}/list">Volver al listado</a>
        </div>
    </div>
</div>