<div class="container {{#if establishment}}{{else}}h-75{{/if}} mt-5 mb-5">
    <div class="row justify-content-end">
        <div class="col-4">
            <form method="GET" action="/establishment/filter-search" role="search" class="d-flex">
                <input  class="form-control me-2" name="search" type="search" placeholder="Nombre establecimiento" />
                <button type="submit" class="btn btn-success">Buscar</button>
            </form>
        </div>
        <div class="col-4 d-flex justify-content-end">
            <a class="btn btn-success rounded-circle me-2" href="/establishment/create" data-bs-toggle="tooltip" data-bs-title="Añadir establecimiento"><i class="fa-regular fa-plus fa-fw"></i></a>
        </div>
    </div>
    {{#if establishment}}
        <div class="row mt-5">
            {{#each establishment}}
                <div class="col-3 custom-dimension mt-5 mb-5">
                    <a class="d-flex justify-content-center align-items-center custom-img-dimensions" href="/establishment/{{this.id}}/update" data-bs-toggle="tooltip" data-bs-title="{{this.name}}">
                        <div class="img-hover-zoom card h-100 w-100 overflow-hidden">
                            <img src="{{this.photo}}" class="card-img h-100 w-100" alt="{{this.name}}">
                        </div>
                    </a>
                    <div>Localizacion: <span class="fst-italic fw-bold">{{this.address}}</span></div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <div class="row h-75 align-items-center">
            <div class="col-12 d-flex justify-content-center">No tenemos ningún establecimiento registrado.</div>
        </div>
    {{/if}}
</div>