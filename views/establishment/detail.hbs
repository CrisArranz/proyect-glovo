<div class="container d-flex flex-column justify-content-around mb-5 mt-5 pt-5 pb-5">
    <div class="row justify-content-center">
        <div class="col-8">
            <h2 class="mb-4 text-center">Detalles de Establecimiento</h2>
            <h5 class="mb-4 text-center text-success fst-italic">{{establishment.name}}</h5>
            <form action="/users/{{establishment._id}}/update" method="POST">
                <div class="row">
                    <div class="col-4 d-flex flex-column justify-content-end">
                        <span class="form-label">Imagen:</span>
                    </div>
                    <div class="col-8">
                        <img class="h-100 w-100" src="{{establishment.photo}}">
                    </div>
                </div>
                <div class="row mt-3 mb-3">
                    <div class="col-12">
                        <input type="text" name="photo" class="form-control {{#if errors.photo }}is-invalid{{/if}}" placeholder="URL..." value="{{establishment.photo}}" />
                        <div class="invalid-feedback mt-2">{{errors.photo}}</div>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="row">
                        <div class="col-3">
                            <label class="form-label me-2">Tipos de comida: </label>
                        </div>
                        <div class="col-9">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="types" value="american" {{#if establishment.foodType.american}}checked{{/if}} />
                                <label class="form-check-label"><i class="fa-solid fa-burger fa-fw" data-bs-toggle="tooltip" data-bs-title="Americano"></i></label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="types" value="asian" {{#if establishment.foodType.asian}}checked{{/if}} />
                                <label class="form-check-label"><i class="fa-solid fa-bowl-rice fa-fw" data-bs-toggle="tooltip" data-bs-title="Asiático"></i></label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="types" value="italian" {{#if establishment.foodType.italian}}checked{{/if}} />
                                <label class="form-check-label"><i class="fa-solid fa-pizza-slice fa-fw" data-bs-toggle="tooltip" data-bs-title="Italiano"></i></label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="types" value="spanish" {{#if establishment.foodType.spanish}}checked{{/if}} />
                                <label class="form-check-label"><i class="fa-solid fa-bacon fa-fw" data-bs-toggle="tooltip" data-bs-title="Español"></i></label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="types" value="mexican" {{#if establishment.foodType.mexican}}checked{{/if}} />
                                <label class="form-check-label"><i class="fa-solid fa-pepper-hot fa-fw" data-bs-toggle="tooltip" data-bs-title="Mejicano"></i></label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="types" value="vegan" {{#if establishment.foodType.vegan}}checked{{/if}} />
                                <label class="form-check-label"><i class="fa-solid fa-wheat-awn fa-fw" data-bs-toggle="tooltip" data-bs-title="Vegano"></i></label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="types" value="seafood" {{#if establishment.foodType.seafood}}checked{{/if}} />
                                <label class="form-check-label"><i class="fa-solid fa-shrimp fa-fw" data-bs-toggle="tooltip" data-bs-title="Marisco"></i></label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="mb-3">
                            <label class="form-label">Longitud</label>
                            <input name="longitude" type="text" class="form-control {{#if errors.longitude}}is-invalid{{/if}}" value="{{establishment.location.coordinates.[0]}}" placeholder="Longitud..." />
                            {{#if errors.longitude}}
                                <div class="invalid-feedback">
                                    {{errors.longitude}}
                                </div>
                            {{/if}}
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="mb-3">
                            <label class="form-label">Latitud</label>
                            <input name="latitude" type="text" class="form-control {{#if errors.latitude}}is-invalid{{/if}}" value="{{establishment.location.coordinates.[1]}}" placeholder="Latitud..." />
                            {{#if errors.latitude}}
                                <div class="invalid-feedback">
                                    {{errors.latitude}}
                                </div>
                            {{/if}}
                        </div>
                    </div>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success">Modificar Establecimiento</button>
                </div>
            </form>
        </div>
    </div>
    <div class="w-100"></div>
</div>