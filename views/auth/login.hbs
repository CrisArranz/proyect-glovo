{{> header }}

<div class="container h-75 d-flex flex-column justify-content-center">
    <div class="row justify-content-center">
        <div class="col-4">
            <h2 class="mb-4">Login</h2>
            <form action="/login" method="POST">
                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="fa-solid fa-burger fa-fw"></i></span>
                    <input type="text" name="email" class="form-control" placeholder="Email" value="{{user.username}}" />
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="fa-solid fa-key fa-fw"></i></i></span>
                    <input type="password" name="password" class="form-control {{#if errors.password }}is-invalid{{/if}}" placeholder="Password" />
                    <div class="invalid-feedback mt-2">{{errors.password}}</div>
                </div>
                <div class="d-flex flex-column justify-content-start">
                    <div class="d-flex justify-content-between">
                        <a href="/register" class="btn btn-link p-0">Create new user</a>
                        <button type="submit" class="btn btn-success">Login</button>
                    </div>
                    <a href="/register" class="btn btn-link p-0">Create new user</a>
                </div>
            </form>
        </div>
    </div>
</div>